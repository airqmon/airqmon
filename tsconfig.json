{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "common/*": ["common/*"],
      "data/*": ["data/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "declaration": false
  },
  "include": ["src/**/*"]
}
